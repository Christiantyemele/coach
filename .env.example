# Copy this file to .env and fill in real values before running the project.
# Do NOT commit your real .env to git.

# Vite frontend can access VITE_BACKEND_URL at build time
VITE_BACKEND_URL=http://localhost:3000

# ElevenLabs
# NOTE: store real API keys server-side (backend). Do not expose secrets in frontend builds.
ELEVENLABS_API_KEY=
# If using the ElevenLabs Agents product, you may also need an agent id
ELEVENLABS_AGENT_ID=

# Loveable (auxiliary / optional service)
LOVEABLE_API_KEY=

# Backend settings (if running local or deployed)
BACKEND_URL=http://localhost:3000
PORT=3000
NODE_ENV=development

# Optional, for music integration or third-party services
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=

# Feature toggles
ENABLE_SPOTIFY=false
ENABLE_VOICE_UPLOADS=true
